                </dialog> --}}

            </div>

        </div>
    </div>
</div>



<div  class="user-profile-btn">
    <div class="user-pet-btn">
        <button class="btn-pet"><a class="btn-text" href="/view-all-pets">View All Pets</a></button>
        <button class="btn-pet"><a class="btn-text" href="/create-pet/{{user._id}}">Create Pet</a></button>
    </div>
    
    <p class="titles-pet">Your pets</p>

</div>


<div class="all-profiles user-profile-pets">
    {{#each foundPet}}
         <div class="all-prifles-each-box">
            <a href="/pet-profile/{{_id}}" class="hover-each-grid-box">
                <div class="all-profile-each-box-pic-of-pet-div">
                    <img  class="hover-image all-profile-each-box-pic-of-pet" src="{{img}}" alt="pet img">
                </div>   
                <div class="all-profile-each-box-info-of-pet">
                    <div class="all-profile-each-box-info-of-pet-name into-pet-p">
                        <p>Name: <p class="hover-name">{{name}}</p></p>
                    </div>
                    <div class="all-profile-each-box-info-of-pet-description into-pet-p">
                        <p>Description: <p>{{description}}</p></p>
                    </div>
                </div>          
            </a>  
        </div>
    {{/each}}
</div>

